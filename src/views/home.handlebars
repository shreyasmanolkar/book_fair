<div class="overlay-container-hero">
        <div class="overlay-hero"></div>
        <h1>We live to server <br>book lovers.</h1>
        <button>Get Started</button>
    </div>

    <div class="shops">
        <h1 class="home-title">Featured Shops</h1>
        <ul>

            {{#each data.shops}}
                <a href="/sellers/{{seller_id}}/books"><li>{{shop_name}}</li></a>
            {{else}}
            <p>No Shops</p>
            {{/each}}
            <a href="/sellers/"><li>View All Sellers</li></a>
            <a href="/books/"><li>View All Books</li></a>
        </ul>
    </div>

    <div class="category">

        <h1 class="home-title">Trending This Week</h1>
        <div class="books-display-category">

            {{#each data.trending}}

            <div class="book-cover-home">
                <a href="/books/{{book_id}}">
                    <div class="book-img-home">
                        <img src={{image_url}} alt="img">
                    </div>
                </a>
                <h3><a href="/books/{{book_id}}">{{name}}</a></h3>
                <h5><a href="/sellers/{{seller_id}}">{{full_name}}</a></h5>
                <h2>₹ {{price}}</h2>
            </div>

            {{else}}
            <p>No Trending Books Available</p>

            {{/each}}

        </div>

    </div>

