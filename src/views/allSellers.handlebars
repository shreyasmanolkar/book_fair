<header>
    <h1><a href="/">BookFair</a></h1>
    <form action="/books/search">
        <input type="text" name="term" id="search" placeholder="Search Books" >
        <input type="submit" value="Search" class="srch-btn">
    </form>
    <div>
        <a href="/buyer/{{authId}}/cart"><i class="fas fa-shopping-cart"></i></a>
        <a href="/buyer/{{authId}}"><i class="fas fa-user-alt"></i></a>
    </div>
</header>

<div class="display-center">
        <h1 class="open-title">Sellers</h1><br><br>

        {{#each data.allSellers}}

        <div class="seller-profile-display">
            <div class="profile-display-image">
                <div class="seller-profile">
                    <i class="fas fa-user-tie"></i>
                </div>
            </div>
            <div class="profile-display-detail">
                <h2>{{full_name}}</h2>
                <h3>{{email}}</h3><br>
                <h4>{{phone_number}}</h4>
            </div>
            <div class="profile-display-cta">
                <a href="/sellers/{{seller_id}}" class="btn mr-b">View Profile</a>
                <a href="/sellers/{{seller_id}}/books" class="btn mr-b">View Books</a>
            </div>
        </div>

        {{else}}
        <p>No Sellers Available</p>
        {{/each}}

    </div>