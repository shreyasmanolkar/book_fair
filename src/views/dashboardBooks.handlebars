<h1 class="home-title">My Books</h1>
    <div class="dashboard-books">

        {{#each data.sellerBooks}}

        <div class="seller-book-display">
            <div class="seller-book-image">
                <div class="seller-img">
                    <img src={{image_url}} alt="img">
                </div>
            </div>
            <div class="seller-detail">
                <h2>{{name}}</h2>
                <h5>Seller: <a href="/sellers/{{seller_id}}">{{seller_name}}</a></h5><br>
                <p>{{substring}}</p><br>
                <h2>â‚¹  {{price}}</h2>
            </div>
            <div class="seller-cta">
                <a href="#" class="s-btn"><i class="fas fa-trash"></i></a>
            </div>
        </div>
        
        {{/each}}

        {{#each data.sellerIdInfo}}

        <a href="/seller/{{seller_id}}/books/new" class="btn">Add New Book</a><br>
        <a href="/seller/{{seller_id}}/orders" class="btn">View Orders</a><br>
        <a href="/sellers/{{seller_id}}/books" class="btn">Visit Shop</a><br>
        <a href="/seller/{{seller_id}}/" class="btn">Dashboard</a>
        <br><br><br>

        {{/each}}
    </div>