<header>
    <h1><a href="/">BookFair</a></h1>
    <input type="text" name="search" id="search" placeholder="Search Books" >
    <div>
        <a href="/buyer/{{authId}}/cart"><i class="fas fa-shopping-cart"></i></a>
        <a href="/buyer/{{authId}}"><i class="fas fa-user-alt"></i></a>
    </div>
</header>

<div class="banner-f"></div>
    <div class="profile-mid-center">
        <i class="fas fa-user-tie"></i>
    </div>
    <div class="title-mid">
        <h1>ALL Books</h1>
        <h3>Owner</h3>
        {{#each data.sellerName}}
        <p>{{full_name}}</p>
        {{else}}
        <p>Lorem</p>
        {{/each}}
    </div>

    <div class="display-mid">

        {{#each data.sellerBooks}}

        <div class="book-display-shops">
            <div class="book-image">
                <div class="shops-img">
                    <img src={{image_url}} alt="img">
                </div>
            </div>
            <div class="book-display-detail">
                <h2>{{name}}</h2>
                <h5>Seller: <a href="/sellers/{{seller_id}}">{{seller_name}}</a></h5><br>
                <p>{{substring}}</p><br>
                <h2>â‚¹ {{price}}</h2>
            </div>
            <div class="book-display-cta">
                <a href="/books/{{book_id}}" class="btn">View Book</a>
            </div>
        </div>

        {{/each}}

    </div>