<header>
    <h1><a href="/">BookFair</a></h1>
    <input type="text" name="search" id="search" placeholder="Search Books" >
    <div>
        <a href="/buyer/{{authId}}/cart"><i class="fas fa-shopping-cart"></i></a>
        <a href="/buyer/{{authId}}"><i class="fas fa-user-alt"></i></a>
    </div>
</header>


<div class="bg-overlay-container">
        <div class="bg-overlay"></div>
        <div class="container">
            <div class="auth-section">
                <div class="auth auth-l">
                    <h1>BookFair</h1>
                    {{#each errors}}
                        <div class="error">
                            <p>{{text}}</p>
                        </div>
                    {{/each}}
                    <div>
                        <form action="/buyer/new" method="POST">
                            <input type="text" name="full_name" placeholder="Full_Name" value={{full_name}}>
                            <input type="text" name="email" placeholder="Email" value={{email}}>
                            <input type="number" name="phone_number" placeholder="Phone_Number" value={{phone_number}}>
                            <input type="text" name="address" placeholder="Address" value={{address}}>
                            <input type="submit" value="Sign Up" class="btn">
                        </form>
                    </div>
                </div>
                <br><br>
                <div class="auth auth-s">
                    <p>Have an account?</p>
                    <a href="/buyer/login">Log IN</a>
                </div>
            </div>
        </div>
    </div>